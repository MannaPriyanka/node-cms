<div class="row">
    <div class="container">
        <div class="col-md-10">
            <table class="table table-bordered text-center text-white">
                <thead class="bg-dark">
                    <tr>
                        <th>Id</th>
                        <th>Publisher</th>
                        <th>Date</th>
                        <th>Comment Body</th>
                        <th>Approve Comments</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody class="text-dark">
                    {{#each comments}}
                    <tr>
                        <td>{{_id}}</td>
                        <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                        <td>{{date}}</td>
                        <td>{{body}}</td>
                        <form action="/admin/approvecomment/{{_id}}" method="POST">
                            <td><input type="checkbox" name="approveComments" class="approveComments"
                                    data-buttonid="{{id}}" {{#if commentIsApproved}}checked="checked" {{/if}} /></td>
                        <td><input type="submit" class="btn btn-sm btn-warning" value="Update"></td>
                        </form>

                    </tr>

                    {{/each}}
                </tbody>


            </table>
        </div>
    </div>
</div>